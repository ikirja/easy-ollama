{
  "name": "easy-ollama",
  "displayName": "Easy-Ollama",
  "description": "Extension for easy use of Ollama inside VSCode. Developed by EasyOneWeb LLC.",
  "version": "0.1.0",
  "publisher": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/ikirja/easy-ollama.git"
  },
  "license": "ISC",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "easy-ollama.openEasyOllamaPanel",
        "title": "Open Easy-Ollama panel",
        "icon": "$(chat-editor-label-icon)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "easy-ollama.openEasyOllamaPanel",
          "title": "Open Easy-Ollama panel",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Easy-Ollama",
      "properties": {
        "easy-ollama.model": {
          "type": "string",
          "enum": [
            "deepseek-r1",
            "llama3.2"
          ],
          "markdownEnumDescriptions": [
            "Use DeepSeek R1",
            "Use Llama 3.2"
          ],
          "default": "deepseek-r1"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "tailwindcss": "^4.0.6",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "ollama": "^0.5.13"
  }
}
